<h1>This is my show</h1>

<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <h2 class="m-0"><%= @task.title %></h2>
    <div class="btn btn-warning"><a href="/tasks/<%= @task.id %>/edit">Edit</a></div>
  </div>

  <div class="card-body">
    <h3 class="card-text"><%= @task.details %></h3>
  </div>

  <div class="card-body">
    <% if @task.completed %>
    <div class="d-flex align-items-center">
      <input checked type="checkbox" id="tasks" name="tasks">
      <p class="mb-0 ml-3">This task is completed congrats!</p>
    </div>
    <% else %>
    <div class="d-flex align-items-center">
      <input type="checkbox" id="tasks" name="tasks">
      <p class="mb-0 ml-3">Boooooo you have still to do this!</p>
    </div>
    <% end %>
  </div>
</div>

<div class="btn btn-primary mt-3"><a href="/tasks">Go Back</a></div>

